<div id="map-container">
  <div id="map"></div>
  <script>
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: <%= latitude %>, lng: <%= longitude %>},
        zoom: 15
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= MAP_API_KEY %>&callback=initMap"
  async defer></script>
</div>
